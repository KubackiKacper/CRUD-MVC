@model List<CRUD_MVC.Models.Employees>
@{
    ViewData["Title"] = "Employees";
    
}

<h1 class="title">Employees</h1>

<div>
    <a class="btn btn-outline-success add-Button" href="@Url.Action("AddEmployee", "CRUD_MVC")">Add Employee</a>
</div>

<table  class="table table-bordered table-striped">
<thead>
    <tr>
        <th>
            EmployeeID
        </th>
        <th>
            LastName
        </th>
        <th>
            FirstName
        </th>
        <th>
            Title
        </th>
        <th>
            TitleOfCourtesy
        </th>
        <th>
            BirthDate
        </th>
        <th>
            HireDate
        </th>
        <th>
            Address
        </th>
        <th>
            City
        </th>
        <th>
            Region
        </th>
        <th>
            PostalCode
        </th>
        <th>
            Country
        </th>
        <th>
            HomePhone
        </th>
        <th>
            Extension
        </th>
        <th>
            Reports
        </th>
        <th>
            Delete
        </th>
    </tr>
</thead>
<tbody>
    @foreach(var obj in Model)
    {
        <tr>
            <td>
            @obj.EmployeeID
            <a asp-controller="CRUD_MVC" asp-action="EditEmployee" asp-route-Employeeid="@obj.EmployeeID">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
                    </svg>
                </a>
            </td>
            <td>
                @obj.LastName
            </td>
            <td>
                @obj.FirstName
            </td>
            <td>
                @obj.Title
            </td>
            <td>
                @obj.TitleOfCourtesy
            </td>
            <td>
                @obj.BirthDate?.ToString("dd.MM.yyyy")
            </td>
            <td>
                @obj.HireDate?.ToString("dd.MM.yyyy")
            </td>
            <td>
                @obj.Address
            </td>
            <td>
                @obj.City
            </td>
            <td>
                @obj.Region
            </td>
            <td>
                @obj.PostalCode
            </td>
            <td>
                @obj.Country
            </td>
            <td>
                @obj.HomePhone
            </td>
            <td>
                @obj.Extension
            </td>
            <td>
                @obj.ReportsTo
            </td>
            
            <td>
                <a id="deleteEmployeeButton" href="#" style="color: red;" onclick="confirmDelete(@obj.EmployeeID)"> 
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                    </svg>
                </a>
            </td>
        </tr>
    }
</tbody>
</table>


@section Styles{
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link type="text/css" href="/css/Employees.css" rel="stylesheet" />
}
@section Scripts{

  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
  <script src="/js/Employee.js?v=1.1"></script>

  

}